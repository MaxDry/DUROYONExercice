<form method="post" action="{{ path('candidature_delete', {'name': candidature.name}) }}" onsubmit="return confirm('Voulez vous vraiment le supprimer ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ candidature.name) }}">
    <button class="btn">Delete</button>
</form>
